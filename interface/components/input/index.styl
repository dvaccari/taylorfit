tf-input
  display inline-block
  position relative
  max-width 100%

  & > input.custom
    cursor text
    font-size 12pt
    width 80px
    background rgba(black, 0.1)
    box-shadow 0 0 0 2px rgba(black, 0.3)
    padding 2px 12px
    margin 4px
    border-radius 1000px
    transition 300ms
    &.invalid
      box-shadow 0 0 2px red
