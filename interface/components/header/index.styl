tf-header
  color white
  background blue
  position fixed
  size 100% header-height
  box-sizing border-box
  z-index 100000
  box-shadow 0 0 3px rgba(black, 0.3)
  display flex
  justify-content space-between

  .loader
    position absolute
    background purple
    bottom -4px
    height 4px
    box-sizing border-box
    display block
    transition 300ms
    transition-timing-function ease
    //transition-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
    box-shadow 0 0 3px purple
    &:after
      display block
      content ""
      box-sizing border-box
      size 4px
      box-shadow 0 0 4px 3px rgba(purple, 0.6)
      background purple
      position absolute
      right 0

  .settings
    float right
    padding 20px 24px
    transition 300ms
    box-sizing border-box
    height header-height
    background darken(blue, 10%)
    &:hover
      background darken(blue, 20%)
    & > .fa
      margin-left 10px

  .button
    background darken(green,10%)

  .title
    display inline-flex
    font-size 25pt
    //padding 12px 32px

    font-family "Cookie"
    color white
    margin-bottom 8px
    //margin-top 10px
    //line-height 1

    & > img
      float left
      height 45pt
      width 45pt
      display inline-block

    & > p
      font-size 25pt
      padding-left 20px
      margin-top 10px
      display inline-block

    //& > .titleword


  /**  &:after
      content ''
      clear both
      display inline-block
  **/

  .name
    padding-left 15px
    font-size 18pt

  .stop
    padding 20px 24px
    transition 300ms
    box-sizing border-box
    height header-height
    background darken(red, 10%)
    display inline-block
    &:hover
      background darken(red, 20%)
    & > .fa
      margin-left 10px

  tf-loader
    hr, .small
      display none
