tf-histogram
  z-index 1000

  & > .background
    display none
    z-index 1000
    width 100%
    height 100%
    background rgba(0,0,0,.5)
    top 0
    left 0
    position absolute

  & > .histogram
    display none
    position absolute
    top 50%
    left 50%
    margin-top -210px
    margin-left -310px
    width 600px
    height 400px
    background #fff
    border 1px solid #e9ebed
    padding 10px
    z-index 1000
    box-shadow 0 0 3px 1px rgba(0,0,0,.5)

  .title
    margin-bottom: 10px;
    display: block;
    text-align: center;

  .right, .left
    background #27ae60
    color #fff
    padding 2px 12px
    border-radius 2px
    font-size 12pt
    margin-left 10px
    top 8px
    position absolute

  .right
    right 8px

  .left
    left 8px

  .active
    display block

  svg
    overflow visible !important

  .c3-chart-bar
    opacity 1 !important

  .c3-axis
    clip-path unset !important

  path, line
    fill none
    stroke black

  .c3-tooltip-container
    background white
    padding 2px 4px
    box-shadow 0 0 0 1px rgba(black, 0.3)
    border-radius 3px
    position relative
    transform translateX(-20px)