
darken-amount = 6%

tf-result
  text-align center
  *
    user-select text

  & > .nomodel
    font-size 4vw
    color #CCC
    display block
    user-select none

  & > .table-wrapper
    display inline-block
    vertical-align top
    margin-right 10px


  span.graphs
    padding 30px
    box-sizing border-box
    width 400px
    display block
    border 3px dashed rgba(black, 0.2)
    border-radius 20px

    & > *
      display block
      color #BBB
    & > hr
      border 1px solid #DDD
    & > .title
      font-size 28pt
    & > .subtitle
      font-size 16pt

  table
    font-size 12pt

    & > thead > tr > th
    & > tbody > tr > td
      padding 3px 6px
      box-shadow inset -1px -1px 0 0 #EEE, inset 1px 1px 0 0 #EEE

  table.stats
    & > tbody > tr
      & > td.name
        text-align left
        font-weight bold
      & > td.value
        text-align right


  table.terms
    & > tbody > tr
      & > td
        text-align right
      & > td.term
        text-align left
        & > span.name:before
          content "Â·"
          margin 0 2px
      & > td.control
        & > span.remove
          cursor pointer
          color #CCC
          transition color 300ms
          &:hover
            color red

      &:nth-child(2) > td.term
        color darken(red,darken-amount)
      &:nth-child(3) > td.term
        color darken(blue,darken-amount)
      &:nth-child(4) > td.term
        color darken(green,darken-amount)
      &:nth-child(5) > td.term
        color darken(orange,darken-amount)
      &:nth-child(6) > td.term
        color darken(purple,darken-amount)
      &:nth-child(7) > td.term
        color darken(cyan,darken-amount)

