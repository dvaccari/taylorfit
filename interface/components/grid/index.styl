
tf-grid
  display inline-block
  tf-dropdown
    absolute right 8px top 4px
    .dropdown-content
      overflow hidden
      & > *
        padding 4px 10px
        display inline-block
        transition background 300ms
        width 100%
        box-sizing border-box
        cursor pointer
        &.sep
          border-top 1px solid #DDD
        &:hover
          background #EEE
  & > .title
    margin-right 10px
  & > span.name
    padding-left 12px
  & > a.save
  & > a.clear
    background green
    color white
    padding 2px 12px
    border-radius 2px
    font-size 12pt
    margin-left 10px
  & > a.clear
    background red
  & > table
    font-size 10pt
    margin-top 10px
    td, th
      padding 2px 6px
      text-align left
      position relative
      & > *
        display inline-block
    th
      padding-right 24px
      padding-bottom 6px
      font-weight 700
      transition 400ms
      &.prd
        color orange
        box-shadow inset 0 -2px 0 orange
      &.err
        color purple
        box-shadow inset 0 -2px 0 purple
      &.dep
      &.dependent
        color blue
        box-shadow inset 0 -2px 0 blue
      tf-dropdown
        absolute right 4px top 0px
    td
      text-align right
    th .placeholder
      font-family "Cookie"
    td .placeholder
      color #CCC
    .add
      box-shadow none
      padding 3px
    .add > a
      padding 4px 5px
      size 24px
      box-sizing border-box
      font-size 12pt
      background #DDD
      color white
      text-align center
      cursor pointer
      border-radius 100%
      transition background 300ms
      &:hover
        background green
    th.add
      border-top-right-radius 10px
      border-bottom-right-radius 10px
    td.add
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px





