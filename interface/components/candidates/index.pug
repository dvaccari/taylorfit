
header
  span.title Candidate Terms
tf-pager(params="source:source,result:result")
.candidate-wrapper
  table.candidates(data-bind="if:candidates().length")
    thead
      tr
        th
          div.centering
            div.fixing Term
        // ko foreach:allstats
        // ko if:!global && sort && selected()
        th
          div.centering
            div.fixing(data-bind="text:name,click:function(){$parent.sortby($data)}")
        // /ko
        // /ko

    tbody
      // ko foreach:result
      tr.candidate(data-bind="click:function(){selected(true)},css:{selected:selected}")
        td.term
          span.coeff
            span(data-bind="num:coeff")
          // ko foreach:term
          // ko if:exp !== 0
          span.name
            span(data-bind="text:name||'x'")

            // ko ifnot:name
            | (
            sub(data-bind="text:index")
            | )
            // /ko
            // ko if:$parents[1].show_lags || lag
            sub(data-bind="text:lag || 0")
            // /ko
          // ko if:exp !== 1
          sup(data-bind="text:exp")
          // /ko
          // /ko
          // /ko
        // ko foreach:allstats
        // ko if:!global && sort && selected()
        td.stat
          span.value(data-bind="num:$parent.stats[id], fmt: format")
        // /ko
        // /ko
      // /ko
